package msa10;
/*
 * Main에서 구현한 배열을 이용한 성적관리 프로그램을 memberPro에서 하도록 프로그램을 변경하라.
 * 
 * 힌트 : main에서 작성된 소스를 보고 기능별로 구분하여 각 메서드를 만들어서 구분하도록 한다.
 * dto : 인스턴스변수, getter,setter ...
 * 
 * 
 * 최대 10개까지만 받기
 * [입력]
 * 이름
 * 국어
 * 영어
 * 계속 입력(0:break  1:계속입력)
 * 
 * [출력] (총점기준 내림차 정렬)
 * 이름 국어 영어 총점 평균
 * .. .. .. .. ..
 * 
 */

import java.util.Scanner;

class MemberDTO{
	private String name;
	private int kor;
	private int eng;
	private int tot;
	private float avg;
	
	public MemberDTO(String name,int kor,int eng) {
		this.name = name;
		this.kor = kor;
		this.eng = eng;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getKor() {
		return kor;
	}

	public void setKor(int kor) {
		this.kor = kor;
	}

	public int getEng() {
		return eng;
	}

	public void setEng(int eng) {
		this.eng = eng;
	}

	public int getTot() {
		return tot;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public float getAvg() {
		return avg;
	}

	public void setAvg(float avg) {
		this.avg = avg;
	}
	
	
	
}

class MemberPro{ //처리	//객체를 추가하고 정렬하고 출력하는 각각의 메소드를 구현
	
	private MemberDTO[] arr = new MemberDTO[10];

	public MemberPro(MemberDTO arr,int i) {
		this.arr[i] = arr;
	}

	//총점,평균 계산처리
	public void score(MemberDTO student,int i) {
		arr[i].setTot(arr[i].getKor()+arr[i].getEng());
		arr[i].setAvg((arr[i].getKor()+arr[i].getEng())/2.0f);
		
	}
	
	//내림차순 처리
	public void sort() {
		
		MemberDTO temp;
		for(int i=0; i<arr.length-1; i++) {
			
			for(int j=i+1; j<arr.length; j++) {
				if(arr[i].getTot()<arr[j].getTot()) {
					temp = arr[i];
					arr[i] = arr[j];
					arr[j] = temp;
				}
			} //for j end
			
		}//for i end
	} //end sort method
	
	public void print() {
		System.out.println("이름\t국어\t영어\t총점\t평균");
		for(MemberDTO i:arr)
			System.out.println(i.getName()+"\t"+i.getKor()+"\t"+i.getEng()+"\t"+i.getTot()+"\t"+i.getAvg());
	}
	
}
public class question {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in); //main에서 객체를 입력하도록
		//memberPro에서 구현한 메소드를 호출하여 출력
		
		//MemberDTO student = null;
		MemberPro mp = null;
		
		//성적 입력
		for(int i=0; i<10; i++) {
			System.out.print("이름 : ");
			String name = sc.next();
			System.out.print("국어 : ");
			int kor = sc.nextInt();
			System.out.print("영어 : ");
			int eng = sc.nextInt();
			
			MemberDTO student = new MemberDTO(name, kor, eng);
			mp.score(student,i); //총점,평균 처리
			
			mp = new MemberPro(student, i);
			System.out.print("0:입력 끝 | 1:계속입력 :");
			int num = sc.nextInt();
			
			if(num==0)
				break;
		} //for end

		//내림차순
		mp.sort();
		
		//출
	}

}
