package msa05;
/*
 *     클래스 : 같은 종류의 집단에 속하는 속성과 행위의 정의(객체를 만들기 위한 틀)
    	객체 : 클래스를 인스턴스화(실체화) 한 것 (클래스에 메모리를 주입하면 객체 생성)
   
 */
class Person{
	
	String name;
	int age;
	String addr;
	
}
public class PersonTest {

	public static void main(String[] args) {
		
		Person p1; // 객체 : 클래스를 이용하여 선언
		//	p1.addr="베디"; // 에러 : p1은 메모리 할당 안된 null값이므로 메모리 안들어감
		
		p1 =new Person(); // 인스턴스 :객체에 메모리 할당
			p1.name="홍길자";		
			p1.age=80;
			p1.addr="경기";
			
		Person p2 = new Person();
			p2.name="홍길동";
			p2.age=40;
			p2.addr="서울";

		System.out.println(p1.name+p1.age+p1.addr);
		System.out.println("==========");
		System.out.println(p2.name+p2.age+p2.addr);
	
			

	}

}
