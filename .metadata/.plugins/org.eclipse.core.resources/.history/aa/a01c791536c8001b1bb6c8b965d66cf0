package msa07;
//최대 10명까지 이름,국어,영어 입력받아 총점,평균,성취도 출력
//총점 순으로 내림차 정렬, 배열로 입력
/*
 *입력예시 ) 입력할 인원수는 ? [2]  //11이상 입력시 -> 인원을 잘못 입력하였습니다.
 *        이름 : [이름]
 *        국어 : [점수]
 *        영어 : [점수]
 *        ...
 *
 * 출력예시) 이름   국어   영어   총점    평균   성취도
 *        홍길동  80  70  150  75   C
 *        홍길순  60  40  100  50   F
 * 
 */

import java.util.Scanner;

class Student{
	//필드
	String name;
	int kor;
	int eng;
	int tot;
	float avg;
	char score;
	
	//생성자
	public Student(String name,int kor,int eng,int tot,float avg,char score) {
		this.name = name;
		this.kor=kor;
		this.eng = eng;
		this.tot=tot;
		this.avg=avg;
		this.score=score;
	}
	
	//메소드
	
}
public class Sort_qeustion2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		System.out.print("입력할 인원수는 ? : ");
		int num = sc.nextInt();

		Student[] students = new Student[num]; //Student 타입으로 들어갈 배열
		
		
		for(int i=0; i<=num; i++) {

			System.out.print("이름 : ");
			String name = sc.next();
			System.out.println("국어 : ");
			int kor = sc.nextInt();
			System.out.println("영어 : ");
			int eng = sc.nextInt();
			

			int tot = kor+eng;
			float avg = (float)(kor+eng)/2;
			char rank;
			if(avg>=90)
				rank = 'A';
			else if(avg>=80)
				rank = 'B';
			else if(avg>=70)
				rank = 'C';
			else if(avg>=60)
				rank = 'D';
			else
				rank = 'F';

			Student ins = new Student(name,kor,eng,tot,avg,rank); //인원수 별로 인스턴스 생성
			students[i] = ins;
				
		}
		
		Student temp;
		
		//총점 기준으로 내림차순
		for(int i=0; i<students.length-1; i++) { //학생 인원수만큼 기준잡고 비교
			for(int j=i+1; j<students.length; j++) { //학생 인원수만큼 뒤 비교
				
				if(students[i].tot<students[j].tot) { //지금 총점만 바뀜
					temp = students[i];
					students[i] = students[j];
					students[j] = temp;
				}
			}
		}
		
		for(int i=0; i<students.length; i++) {
			System.out.println("이름\t국어\t영어\t총점\t평균\t성취도");
			System.out.println(students[i]);
		}
		

	}

}
